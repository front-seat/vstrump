---
interface Props {
  title: string;
}

const { title }: Props = Astro.props;
---

<!-- make a tailwind-friendly rounded-edge button -->
<button
  class="font-plein font-medium text-[18px] leading-[25.2px] border border-sun uppercase bg-transparent px-4 py-2 text-sun hover:text-inherit hover:bg-sun transition-colors duration-200"
>
  {title}
</button>
