---
import Layout from "../layouts/Layout.astro";
import { DonateNowButton } from "../components/Button.tsx";
import Calculator from "../components/Calculator.tsx";
import {
  H1,
  H2,
  H3,
  Em21,
  Em24,
  Em28,
  P21,
  P24,
  P28,
  PMedium,
} from "../components/Typeography.tsx";
---

<Layout title="vs. Trump Fund">
  <main class="lining-nums">
    <!-- donate button and banner for desktop layout only -->
    <div class="w-full bg-sun py-[20px] md:py-[11px]">
      <div
        class="flex flex-col md:flex-row items-center max-w-[768px] lg:max-w-[960px] mx-4 md:mx-auto space-y-[14px] md:space-x-8"
      >
        <div
          class="text-darkest text-[20px] leading-[30px] font-medium font-switzer flex-grow"
        >
          By Memorial Day, your political gifts have lost half their value.
        </div>
        <div class="flex-grow md:flex-grow-0 w-full md:w-auto">
          <DonateNowButton
            invert
            className="w-full md:w-auto md:-mt-[12px]"
            client:load
          />
        </div>
      </div>
    </div>

    <!-- top section! (hero; etc) -->
    <section
      class="pt-12 pb-16 md:pt-32 md:pb-32 max-w-[768px] lg:max-w-[960px] mx-4 md:mx-auto"
    >
      <H1 className="text-less-dark max-w-[550px]">
        <span class="text-sun"><span class="">VS.</span><br />TRUMP</span><br
        />FUND
      </H1>
      <div
        class="mt-[20px] md:mt-[36px] max-w-[320px] md:max-w-[550px] font-switzer font-normal text-[28px] leading-[39.2px] md:text-[32px] md:leading-[44.8px]"
      >
        Donate to a portfolio of high-impact campaigns to defeat Trump.
      </div>

      <!-- more of the hero section stuff -->
      <div
        class="font-plein font-bold text-[40px] leading-[52px] md:text-[56px] md:leading-[78.4px] border-t border-less-dark mt-16 md:mt-32 pt-8"
      >
        We’ve done the research to give you a <span class="text-sun"
          >winning strategy vs. Trump</span
        >.
      </div>

      <!-- hero section details -->
      <div class="flex flex-col pt-16">
        <div
          class="flex flex-wrap md:flex-nowrap md:space-x-16 lg:space-x-28 border-b border-dark py-6"
        >
          <p class="text-white w-[304px] flex-shrink-0">
            <Em28>The most effective places to donate</Em28>
          </p>
          <P21 className="text-medium mt-8 md:mt-0">
            Each project is approved by professional donor advisors.
          </P21>
        </div>
        <div
          class="flex flex-wrap md:flex-nowrap md:space-x-16 lg:space-x-28 border-b border-dark py-6"
        >
          <p class="text-white w-[304px] flex-shrink-0">
            <Em28>2X your impact by giving early</Em28>
          </p>
          <P21 className="text-medium mt-8 md:mt-0">
            Giving in the first half of 2024 is 2X as impactful as giving close
            to the election. <a
              class="text-sun underline hover:text-white transition-colors duration-200"
              href="#TODO"
              onclick="alert('Thanks for your interest! Our blog post goes live on Thursday, February 1st.')"
              >Read the blog post</a
            >.
          </P21>
        </div>
        <div
          class="flex flex-wrap md:flex-nowrap md:space-x-16 lg:space-x-28 py-6"
        >
          <p class="text-white w-[304px] flex-shrink-0">
            <Em28>We don’t touch your donations.</Em28>
          </p>
          <P21 className="text-medium mt-8 md:mt-0">
            You donate directly through our trusted partner ActBlue.
          </P21>
        </div>
      </div>
    </section>

    <!-- yellow section! -->
    <div class="bg-sun text-darkest">
      <section
        class="py-16 md:py-32 max-w-[768px] lg:max-w-[960px] mx-4 md:mx-auto"
      >
        <div class="flex flex-col">
          <!-- how it works -->
          <div
            class="flex flex-row flex-wrap md:flex-nowrap md:space-x-16 lg:space-x-28 py-6"
          >
            <!-- 'how it works' headline -->
            <div class="text-darkest w-[304px] flex-shrink-0 flex flex-col">
              <H2>How it works</H2>
              <P28 className="pt-6">
                Donate to these categories to defeat Trump.
              </P28>
              <p
                class="pt-8 pb-4 md:pb-0 text-[15px] leading-[22.5px] font-switzer"
              >
                Last updated January 23, 2024
              </p>
            </div>

            <!-- 'how it works' table -->
            <div class="flex flex-col">
              <div
                class="flex flex-row flex-nowrap border-t border-b py-6 border-darkest items-center space-x-8"
              >
                <P21 className="flex-grow">
                  Voter registration, persuasion, and turnout
                </P21>
                <PMedium className="flex-shrink-0">40%</PMedium>
              </div>
              <div
                class="flex flex-row flex-nowrap border-b py-6 border-darkest items-center space-x-8"
              >
                <P21 className="flex-grow">
                  Organizations that focus on specific communities and
                  demographics
                </P21>
                <PMedium className="flex-shrink-0">20%</PMedium>
              </div>
              <div
                class="flex flex-row flex-nowrap border-b py-6 border-darkest items-center space-x-8"
              >
                <P21 className="flex-grow">Biden Campaign</P21>
                <PMedium className="flex-shrink-0">20%</PMedium>
              </div>
              <div
                class="flex flex-row flex-nowrap py-6 border-darkest items-center space-x-8"
              >
                <P21 className="flex-grow">Other competitive house races</P21>
                <PMedium className="flex-shrink-0">20%</PMedium>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- the calculator -->
      <div class="bg-darkest text-white">
        <section
          id="donateNow"
          class="pt-16 pb-16 md:pt-32 md:pb-32 max-w-[768px] lg:max-w-[960px] mx-4 md:mx-auto"
        >
          <Calculator client:load />
        </section>
      </div>

      <!-- question section -->
      <div class="bg-dark text-white">
        <section
          class="py-16 md:py-32 max-w-[768px] lg:max-w-[960px] mx-4 md:mx-auto"
        >
          <div class="flex flex-col">
            <div
              class="flex flex-row flex-wrap md:flex-nowrap md:space-x-16 lg:space-x-28 py-6"
            >
              <H2>Questions</H2>

              <!-- list of questions -->
              <div class="flex flex-col -space-y-4 pt-4 md:pt-0">
                <!-- question -->
                <div class="flex flex-col py-6">
                  <P21><Em21>How did you decide on this strategy?</Em21></P21>
                  <P21 className="text-medium">
                    We surveyed the top political donor advisors to pick the
                    most impactful projects to defeat Trump.
                  </P21>
                  <P21 className="text-medium mt-4">
                    Our goal is to provide the most effective giving strategy
                    for people not working with a donor advisor.
                  </P21>
                </div>
                <!-- question -->
                <div class="flex flex-col py-6">
                  <P21><Em21>How do I organize my friends to give?</Em21></P21>
                  <P21 className="text-medium">
                    Please start by forwarding this website to your friends and
                    then
                    <a
                      href="mailto:matt@frontseat.org,dave@frontseat.org?subject=vs.%20Trump%20Fund%20playbook"
                      class="underline hover:text-white transition-colors duration-200"
                      >contact us</a
                    > for our organizing playbook.
                    <P21 className="text-medium mt-4">
                      If you can raise $250 each hour you reach out to your
                      friends, it is the highest-impact volunteer opportunity to
                      defeat Trump.
                    </P21>
                  </P21>
                </div>

                <!-- question -->
                <div class="flex flex-col py-6">
                  <P21><Em21>How much should I give?</Em21></P21>
                  <P21 className="text-medium">
                    It's personal &mdash; but how much is this election worth to
                    you?
                  </P21>
                  <P21 className="text-medium mt-4">
                    We've decided to 10X our impact this election by giving 5X
                    as much as we gave in 2020, and giving 2X as effectively by
                    giving in the first half of 2024.
                  </P21>
                  <P21 className="text-medium mt-4">
                    <a
                      href="#TODO"
                      onclick="alert('Thanks for your interest! Our blog post goes live on Thursday, February 1st.')"
                      class="underline hover:text-white transition-colors duration-200"
                      >Read the blog post</a
                    > on why giving early 2X as effective.
                  </P21>
                </div>

                <!-- question -->
                <div class="flex flex-col py-6">
                  <P21><Em21>But political giving is yucky.</Em21></P21>
                  <P21 className="text-medium">
                    It’s better than another Trump presidency. There’s too much
                    money in politics &mdash; but until campaign finance reform
                    is fixed, money wins elections.
                  </P21>
                  <P21 className="text-medium mt-4">
                    If you want absolute certainty that your dollar reaches
                    people in need, politics is not for you. But government
                    money dwarfs any philanthropic contribution. So in exchange
                    for uncertainty, you get big leverage.
                  </P21>
                </div>

                <!-- question -->
                <div class="flex flex-col py-6">
                  <P21>
                    <Em21>Biden might die so I’m waiting to give.</Em21>
                  </P21>
                  <P21 className="text-medium">
                    Campaign finance law allows the Biden campaign to transfer
                    funds to another candidate so this isn’t a good excuse.
                  </P21>
                </div>
                <!-- question -->
                <div class="flex flex-col py-6">
                  <P21><Em21>Who built this?</Em21></P21>
                  <P21 className="text-medium">
                    This site was built by <a
                      href="https://www.linkedin.com/in/david-slifka-1ba4884/"
                      class="underline hover:text-white transition-colors duration-200"
                      target="_blank">David Slifka</a
                    >, <a
                      href="https://www.linkedin.com/in/mrlerner/"
                      class="underline hover:text-white transition-colors duration-200"
                      target="_blank">Matt Lerner</a
                    >, <a
                      href="https://davepeck.org/"
                      class="underline hover:text-white transition-colors duration-200"
                      target="_blank">Dave Peck</a
                    >, and <a
                      href="https://www.linkedin.com/in/joon-s-86b1ab11/"
                      class="underline hover:text-white transition-colors duration-200"
                      target="_blank">Joon Shin</a
                    >. David is the author of Money and Innovation in politics,
                    was a board member of the Democracy Alliance, and was
                    formerly an investment manager at Yale University.
                  </P21>
                  <P21 className="text-medium mt-4">
                    Matt, Dave, and Joon are techies from Seattle who want to
                    protect our democracy from Trump.
                  </P21>
                </div>
                <!-- post question donate-now stuff -->
              </div>

              <!-- end of question section -->
            </div>

            <!-- post question 'let's win' section -->
            <div
              class="flex flex-row flex-wrap md:flex-nowrap md:space-x-16 lg:space-x-28 py-6"
            >
              <P28 className="text-white flex-grow">
                Let’s win this November. If you wait, we lose.
              </P28>
              <div class="flex-shrink-0 mt-8 md:mt-0">
                <DonateNowButton client:load />
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- footer -->
      <div class="bg-darkest text-white">
        <footer
          class="py-16 md:py-32 max-w-[768px] lg:max-w-[960px] mx-4 md:mx-auto"
        >
          <div class="flex flex-row">
            <p class="flex-grow text-medium">©2024 vs. Trump Fund</p>
            <a
              href="mailto:matt@frontseat.org,dave@frontseat.org?subject=vs.%20Trump%20Fund%20feedback"
              class="underline text-white hover:text-medium transition-colors duration-200"
              >Send Feedback</a
            >
          </div>
        </footer>
      </div>
    </div>
  </main>
</Layout>
